<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E5E5E5"
    tools:context="com.sources.mypet.PetCadastActivity">


    <include
        android:id="@+id/toolbar_actionbar"
        layout="@layout/toolbar_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dados"
        android:layout_margin="15dp"
        android:textColor="#ff9f00ff"
        android:textSize="20dp" />

        <ImageView
            android:id="@+id/my_pet_profile_pic"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/floating_profile"
            android:src="@drawable/ic_profile_pic"
            android:padding="8dp"/>

    <EditText
        android:id="@+id/my_pet_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:hint="@string/pet_name_hint"
        android:textColorHint="@color/editTextColorHint"
        android:layout_margin="15dp"
        android:singleLine="false"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:inputType="textCapSentences"/>

    <Spinner
        android:id="@+id/my_pet_specie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/species_array"
        android:background="#FFFFFF"
        android:layout_margin="15dp"
        android:padding="16dp"/>


    <EditText
        android:id="@+id/my_pet_breed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:hint="@string/pet_breed_hint"
        android:textColorHint="@color/editTextColorHint"
        android:layout_margin="15dp"
        android:singleLine="false"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:inputType="textCapSentences"/>

    <Spinner
        android:id="@+id/my_pet_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/gender_array"
        android:background="#FFFFFF"
        android:layout_margin="15dp"
        android:padding="16dp"
        android:inputType="textCapSentences"/>

    <EditText
        android:id="@+id/my_pet_born"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:hint="Data de nascimento"
        android:textColorHint="@color/editTextColorHint"
        android:layout_margin="15dp"
        android:singleLine="false"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:inputType="date"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salvar"
        android:id="@+id/my_pet_btn_cadast"
        android:layout_margin="15dp"
        android:background="#176DEE"
        android:textColor="#FFFFFF"
        android:inputType="textCapSentences"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
